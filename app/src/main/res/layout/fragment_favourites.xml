<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_color"
    tools:context=".Fragment.FavouritesFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcomebackgroundimage"
        android:scaleType="centerCrop"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        >

        <ImageView
            android:id="@+id/catImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/category"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favourites"
            android:textColor="@color/white"
            android:fontFamily="@font/montsemibold"
            android:textSize="16sp"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:id="@+id/addAlbum"
        >
        <ImageView
            android:src="@drawable/ic_baseline_add_24"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"

            />
    </androidx.cardview.widget.CardView>
    
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/addAlbum"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    
    <LinearLayout
        android:id="@+id/no_albums_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/album"

            />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No album available"
            android:fontFamily="@font/montmedium"
            android:textColor="@color/white"
            android:textSize="13sp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addAlbum"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/recyclerview"
        />

</RelativeLayout>
